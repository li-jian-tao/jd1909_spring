<?xml version="1.0" encoding="UTF-8"?><beans xmlns="http://www.springframework.org/schema/beans"	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"	xsi:schemaLocation="http://www.springframework.org/schema/beans	 http://www.springframework.org/schema/beans/spring-beans-4.3.xsd">	<!-- 把Student类的对象放到ioc容器中 取名为 s1 相当于以前代码 : Student s1 = new Student(); -->			<!-- 非单例 : 每次获取s1 不同 -->	<bean id="s1" scope="prototype" 	     class="com.briup.bean.Student"></bean>			<!-- 单例 : 每次获取s2 同 -->	<bean id="s2" class="com.briup.bean.Student"></bean>		<!-- 给 bean 取别名 -->	<alias name="s2" alias="lisi"/>		<!-- 给bean设置属性值 -->	<bean id="s3" class="com.briup.bean.Student">		<property name="id" value="10"></property>		<property name="name" value="tom123"></property>	</bean>		<bean id="t2" class="com.briup.bean.Teacher">		<property name="id" value="12"></property>		<property name="name" value="小米"></property>		<property name="student" ref="s3"></property>	</bean>														<!-- 注册 Student 类 如果遇到了字符串 该怎么set -->			<bean id="t1" 	      class="com.briup.bean.Teacher">	    <property name="id" value="10" ></property>  	    <property name="name" value="tom" ></property>	    <property name="student" value="1,小明"></property>  	</bean>	<bean id="dataSource"		class="com.alibaba.druid.pool.DruidDataSource" 		init-method="init"		destroy-method="close">		<!-- 基本属性driverClassName、 url、user、password -->		<property name="driverClassName"			value="oracle.jdbc.driver.OracleDriver" />		<property name="url" value="jdbc:oracle:thin:@127.0.0.1:1521:xe" />		<property name="username" value="briup" />		<property name="password" value="briup" />	</bean></beans>